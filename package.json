{
  "name": "react-ts-fullstack-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js express app with TypeScript",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-client && npm run build-ts && npm run tslint && npm run copy-client-files",
    "build-client": "cd client && npm run build",
    "serve": "node dist/server.js",
    "dev-client": "cd client && npm run start",
    "dev-server": "concurrently -k \"npm run watch-ts\" \"npm run watch-node\"",
    "dev": "concurrently -k \"npm run dev-server\" \"npm run dev-client\"",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-client-files": "node tools/copyClientBuildFiles.js"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.36",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongoose": "^5.5.34",
    "async": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "config": "^3.2.4",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.0",
    "nodemailer": "^6.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/nodemailer": "^6.2.0",
    "@types/shelljs": "^0.8.5",
    "concurrently": "^4.1.0",
    "fs-extra": "^8.0.1",
    "merge-dirs": "^0.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "recursive-copy": "^2.0.10",
    "shelljs": "^0.8.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
